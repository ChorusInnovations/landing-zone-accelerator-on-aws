{
  "name": "aws-compliance-accelerator",
  "version": "2.0.0",
  "description": "AWS Compliance Accelerator",
  "license": "Apache-2.0",
  "author": {
    "name": "Amazon Web Services",
    "url": "https://aws.amazon.com"
  },
  "private": true,
  "dependencies": {
    "fs-extra": "10.0.0",
    "jest": "27.2.4",
    "jsii": "1.35.0",
    "jsii-pacmak": "1.35.0"
  },
  "devDependencies": {
    "@aws-cdk/assert": "1.128.0",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.2",
    "@typescript-eslint/eslint-plugin": "4.32.0",
    "@typescript-eslint/parser": "4.32.0",
    "aws-cdk": "1.128.0",
    "esbuild": "0.13.4",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jest": "24.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky-init": "7.0.0",
    "jest": "27.2.4",
    "jest-junit": "12.3.0",
    "lerna": "4.0.0",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "typedoc": "0.22.4",
    "typescript": "4.4.3"
  },
  "scripts": {
    "cleanup": "lerna run cleanup --stream && rm -rf node_modules && rm -rf yarn.lock",
    "cleanup:tsc": "lerna run cleanup:tsc --stream",
    "build": "lerna run build --stream",
    "test": "lerna run test --stream",
    "test:clean": "rm -f ./test-reports/*.xml",
    "docs": "npx typedoc --entryPointStrategy packages './packages/@aws-accelerator/*' './packages/@aws-cdk-extensions/*' './packages/@aws-compliant-constructs/*' --name 'AWS Accelerator' --includeVersion --treatWarningsAsErrors --disableSources --logLevel Verbose",
    "prepare": "cd ../ && husky install source/.husky",
    "postinstall": "cd ../ && husky install source/.husky && cd source",
    "lint": "lerna run lint --stream",
    "prettier": "lerna run prettier --stream"
  },
  "workspaces": {
    "packages": [
      "./packages/@aws-accelerator/accelerator",
      "./packages/@aws-accelerator/config",
      "./packages/@aws-accelerator/constructs",
      "./packages/@aws-accelerator/constructs/lib/aws-*/*",
      "./packages/@aws-accelerator/installer",
      "./packages/@aws-accelerator/utils",
      "./packages/@aws-cdk-extensions/cdk-extensions",
      "./packages/@aws-cdk-extensions/cdk-plugin-assume-role",
      "./packages/@aws-compliant-constructs/compliant-constructs"
    ],
    "nohoist": [
      "**/deepmerge",
      "**/deepmerge/**",
      "**/npmlog",
      "**/npmlog/**",
      "**/@types/npmlog",
      "**/@types/npmlog/**",
      "**/deep-diff",
      "**/deep-diff/**",
      "**/@types/deep-diff",
      "**/@types/deep-diff/**"
    ]
  }
}
